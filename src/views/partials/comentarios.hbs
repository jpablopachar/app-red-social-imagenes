{{#if sidebar.comentarios}}
  <div class="card mt-2">
    <div class="card-header bg-dark text-white">
      <h5><i class="fas fa-comments"></i> Ãšltimos comentarios</h5>
    </div>
    <div class="card-body">
      {{#each sidebar.comentarios}}
        <div class="row">
          <div class="col">
            <a href="/imagenes/{{imagen.idUnico}}"><img src="/public/upload/{{imagen.nombreArchivo}}" class="img-thumbnail w-70"></a>
          </div>
          <div class="col">
            <blockquote class="w-100">
              <p>{{comentario}}</p>
              <footer class="blockquote-footer">
                <span>{{nombre}}</span>
                <span>{{tiempoAtras fechaCreacion}}</span>
              </footer>
            </blockquote>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}
